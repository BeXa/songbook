  \capo{3}
  \cover
  \gtab{Do}{X32010}
  \gtab{Sol}{320003}
  \gtab{Mi7}{020100}
  \gtab{Rém}{XX0231}
  \gtab{La7}{X02020}
  \gtab{Sol7}{320001}
  \gtab{Si7}{2:X02020}
  \gtab{Mim}{022000}
